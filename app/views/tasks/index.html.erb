<div class="container">
  <div class="d-flex justify-content-between align-items-center">
    <h1>My Tasks</h1>
  </div>
    <% @tasks.each do |task| %>
        <p><%= link_to task.title, task_path(task) %></p>
        <p><%= link_to "Delete", task_path(task[:id]), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-danger" %></p>
    <% end %>
    <%= link_to 'âž• Add a new task', new_task_path, class: 'btn btn-primary' %>
</div>
